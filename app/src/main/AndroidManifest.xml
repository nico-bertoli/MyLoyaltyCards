<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simple_loyalty_cards_manager.myloyalitycards">
    
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyLoyalityCards">
        <activity
            android:name="com.simple_loyalty_cards_manager.myloyalitycards.EditCreateCardActivity"
            android:exported="true" />
        <activity
            android:name="com.simple_loyalty_cards_manager.myloyalitycards.EditCardActivity"
            android:exported="true" />
        <activity
            android:name="com.simple_loyalty_cards_manager.myloyalitycards.NewCardActivity"
            android:exported="true" />
        <activity
            android:name="com.simple_loyalty_cards_manager.myloyalitycards.CardZoomActivity"
            android:exported="true" />
        <activity
            android:name="com.simple_loyalty_cards_manager.myloyalitycards.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.simple_loyalty_cards_manager.myloyalitycards.CaptureActivity"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden"
            />
    </application>

</manifest>